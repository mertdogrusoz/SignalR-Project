@model List<SignalRWebUI.Dtos.AboutDtos.ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}



<h1>Index</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alını ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">AÇıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var about in Model)
								{
									count++;

									<tr>
										<td>@count</td>
										<td>@about.Title</td>
										<td>@about.Description</td>
										<td><a href="/About/DeleteAbout/@about.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@about.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}

							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>


