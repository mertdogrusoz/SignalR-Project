@model SignalRWebUI.Dtos.SocialMediaDtos.UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Güncelleme İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Güncellenecek Sosyal Medya Bilgileri Girişi</div>
						</div>
						<input type="hidden" asp-for = "SocialMediaId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
								<span asp-validation-for="Title" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label for="Icon">İkonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="Icon">
								<span asp-validation-for="Icon" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label for="Url">Url'yi giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="Url">
								<span asp-validation-for="Url" class="text-danger"></span>
							</div>
						</div>




						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Alanını Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

