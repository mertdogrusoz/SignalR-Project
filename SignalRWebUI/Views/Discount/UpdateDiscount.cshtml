@model SignalRWebUI.Dtos.DiscountDtos.UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirim Girişi</div>
						</div>
						<input type="hidden" asp-for="DiscountId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Title">İndirim Başlığı Girişi</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Amount">İndirim Oranı</label>
								<input type="text" class="form-control" asp-for="Amount" id="Amount">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Description">İndirim Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" id="Description">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Fotoğraf urli giriniz </label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İndirim Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

