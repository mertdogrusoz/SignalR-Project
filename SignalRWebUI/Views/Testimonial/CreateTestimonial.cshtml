@model SignalRWebUI.Dtos.TestimonialDtos.CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>CreateTestimonial</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Referans Girişi</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Name">Referans Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Title">Referans Başlığını Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="Comment">Referans Yorumunu giriniz</label>
								<input type="text" class="form-control" asp-for="Comment" id="Comment">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Referans fotoğraf urli giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>






						<div class="card-action">
							<button class="btn btn-primary">Referans Alanı Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>



